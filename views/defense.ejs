<!-- views/app.ejs -->
<html>
  <meta charset="utf-8" />
  <head>
    <script src="/socket.io/socket.io.js"></script>
    <script>

      window.addEventListener('load', function(){
        const button = document.getElementById('myButton');
        const msg = document.getElementById('messages');
        button.disabled = true;
        msg.innerHTML = "Ruch przeciwnika<br>";
        var socket = io();
        
        socket.on('attack', function(arg){
          if(button.disabled){
            button.disabled = false; 
            msg.innerHTML = `Tw√≥j ruch<br>${arg + 'G'}`;
          }
        })
        button.addEventListener('click', function(){
          socket.emit('defense', arg);
          button.disabled = true; 
          msg.innerHTML = "Ruch przeciwnika<br>";
          
        })
        socket.emit('joinn', {id:'<%= context.id %>'});
      })
    </script>
  </head>
  <body>
    <p>
      ID twojego pokoju <%= context.id %>
    </p>
    <p>
      <div id='messages'></div>
    </p>
    <p> 
      <!-- <form action="/attack", method="POST">-->
        <canvas id="canvasBoard" width="800px" height="500px"></canvas>
        <button id="myButton">Wykonaj</button>
      <!--</form>-->
    </p>
    <script src="reversi_gameplay.js"></script>
  </body>
</html>
